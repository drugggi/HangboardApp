<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.laakso.hangboardapp.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="morjes infoo kehiin" />

            <Button
                android:id="@+id/testButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/gripLapsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Grip laps"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/hangLapsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hang laps"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/timeONEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Time on"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/timeOFFEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Time off"
                android:inputType="numberSigned" />
            <EditText
                android:id="@+id/setsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="sets"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/restEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="rest"
                android:inputType="numberSigned" />
            <EditText
                android:id="@+id/longRestEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="long rest time"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/testEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned" />

            <Button
                android:id="@+id/finishButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Finish Button" />
        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
