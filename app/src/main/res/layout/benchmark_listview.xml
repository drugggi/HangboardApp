<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/benchmarkGradeImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grade_logo_test" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/benchmarkGradeImageView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/benchmarkTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benchmark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/benchmarkDescriptionTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/benchmarkDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/benchmarkGradeImageView"
            app:layout_constraintTop_toBottomOf="@+id/benchmarkTitleTextView" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>